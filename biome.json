{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100,
		"ignore": [
			"node_modules",
			"dist",
			"build"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessCatch": "warn"
			},
			"performance": {
				"noDelete": "warn"
			}
		},
		"ignore": [
			"node_modules",
			"dist",
			"build"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "all",
			"semicolons": "asNeeded"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space"
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"build",
			".next",
			"coverage"
		]
	}
}