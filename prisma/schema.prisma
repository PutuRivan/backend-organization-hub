generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ENUMS
enum Role {
  Admin
  Personel
}

enum AttendanceStatus {
  Hadir
  Izin
  Sakit
  Alfa
}

enum ItemCondition {
  Baik
  Rusak
  Hilang
}

enum UserStatus {
  Aktif
  Tidak_Aktif
}

model Users {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  nrp        String     @unique
  image      String?
  jabatan    String
  password   String
  status     UserStatus
  role       Role
  pangkat    String
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt

  // Relasi
  attendance        Attendance[]
  inventory_updated Inventory[]       @relation("InventoryUpdatedBy")
  events_created    Events[]          @relation("EventCreatedBy")
  attendance_recap  AttendanceRecap[]
}

model Attendance {
  id         String           @id @default(uuid())
  user_id    String
  date       DateTime
  time_in    DateTime?
  time_out   DateTime?
  status     AttendanceStatus
  note       String?
  created_at DateTime         @default(now())
  updated_at DateTime         @updatedAt

  // Relasi
  user Users @relation(fields: [user_id], references: [id])
}

model Inventory {
  id                   String        @id @default(uuid())
  item_name            String
  quantity             Int
  quantity_description String
  category             ItemCondition
  location             String
  description          String
  image                String
  updated_by           String
  created_at           DateTime      @default(now())
  updated_at           DateTime      @updatedAt

  // Relation to Users (who last updated the inventory item)
  updatedBy Users @relation("InventoryUpdatedBy", fields: [updated_by], references: [id])
}

model Events {
  id             String   @id @default(uuid())
  name           String
  place          String
  leader         String?
  category       String?
  dress_code     String?
  start_datetime DateTime
  end_datetime   DateTime
  created_by     String
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  // Relasi
  createdBy Users @relation("EventCreatedBy", fields: [created_by], references: [id])
}

model AttendanceRecap {
  id            String   @id @default(uuid())
  user_id       String
  month         String
  total_present Int
  total_absent  Int
  total_leave   Int
  total_sick    Int
  created_at    DateTime @default(now())

  // Relasi
  user Users @relation(fields: [user_id], references: [id])
}
